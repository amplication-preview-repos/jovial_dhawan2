datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Trade {
  createdAt   DateTime            @default(now())
  id          String              @id @default(cuid())
  price       Float?
  quantity    Int?
  symbolField String?
  timestamp   DateTime?
  tradeDate   DateTime?
  tradeType   EnumTradeTradeType?
  updatedAt   DateTime            @updatedAt
}

model TradeInsight {
  averagePrice Float?
  createdAt    DateTime @default(now())
  gainLoss     Float?
  id           String   @id @default(cuid())
  totalVolume  Int?
  updatedAt    DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

enum EnumTradeTradeType {
  Option1
}
